@{
}
@model DonHang

<h2>Your Cart</h2>

@if (Model != null && Model.ChiTietDonHangs.Any())
{
    <table>
        <tr>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Giá</th>
            <th>Tổng cộng</th>
        </tr>
        @foreach (var item in Model.ChiTietDonHangs)
        {
            <tr>
                <td>@item.IdSanPhamNavigation.TenSanPham</td>
                <td>@item.SoLuong</td>
                <td>@item.GiaBan</td>
                <td>@(item.SoLuong * item.GiaBan)</td>
            </tr>
        }
        <tr>
            <td colspan="3">Tổng tiền</td>
            <td>@Model.TongTien</td>
        </tr>
    </table>

    <a href="@Url.Action("Checkout", "Cart")" class="btn btn-success">Checkout</a>
}
else
{
    <p>Giỏ hàng của bạn đang trống.</p>
}