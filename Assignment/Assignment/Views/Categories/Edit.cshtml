@model Assignment.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<style>
    .form-group {
        margin: 20px 0;
    }
</style>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCategory" />
            <div class="form-group">
                <label asp-for="TenCategory" class="control-label"></label>
                <input asp-for="TenCategory" class="form-control" />
                <span asp-validation-for="TenCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoTaCategory" class="control-label"></label>
                <input asp-for="MoTaCategory" class="form-control" />
                <span asp-validation-for="MoTaCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
